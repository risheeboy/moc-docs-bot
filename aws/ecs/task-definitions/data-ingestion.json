{
  "family": "ragqa-data-ingestion",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "2048",
  "memory": "4096",
  "containerDefinitions": [
    {
      "name": "data-ingestion",
      "image": "${AWS_ACCOUNT_ID}.dkr.ecr.${AWS_REGION}.amazonaws.com/ragqa/data-ingestion:${IMAGE_TAG}",
      "portMappings": [
        {
          "containerPort": 8006,
          "hostPort": 8006,
          "protocol": "tcp"
        }
      ],
      "essential": true,
      "environment": [
        {
          "name": "PYTHONUNBUFFERED",
          "value": "1"
        },
        {
          "name": "APP_ENV",
          "value": "production"
        },
        {
          "name": "APP_LOG_LEVEL",
          "value": "INFO"
        },
        {
          "name": "INGESTION_SCRAPE_INTERVAL_HOURS",
          "value": "24"
        },
        {
          "name": "INGESTION_MAX_CONCURRENT_SPIDERS",
          "value": "4"
        },
        {
          "name": "INGESTION_RESPECT_ROBOTS_TXT",
          "value": "true"
        },
        {
          "name": "POSTGRES_PORT",
          "value": "5432"
        },
        {
          "name": "POSTGRES_DB",
          "value": "ragqa"
        },
        {
          "name": "REDIS_PORT",
          "value": "6379"
        },
        {
          "name": "AWS_DEFAULT_REGION",
          "value": "ap-south-1"
        },
        {
          "name": "AWS_S3_REGION",
          "value": "ap-south-1"
        },
        {
          "name": "AWS_S3_USE_SSL",
          "value": "true"
        },
        {
          "name": "RAG_SERVICE_URL",
          "value": "http://rag-service.ragqa.local:8001"
        },
        {
          "name": "POSTGRES_HOST",
          "value": "postgres.ragqa.local"
        },
        {
          "name": "REDIS_HOST",
          "value": "redis.ragqa.local"
        }
      ],
      "secrets": [
        {
          "name": "POSTGRES_USER",
          "valueFrom": "${SECRET_ARN_PREFIX}postgres-user"
        },
        {
          "name": "POSTGRES_PASSWORD",
          "valueFrom": "${SECRET_ARN_PREFIX}postgres-password"
        },
        {
          "name": "REDIS_PASSWORD",
          "valueFrom": "${SECRET_ARN_PREFIX}redis-password"
        },
        {
          "name": "AWS_S3_BUCKET_DOCUMENTS",
          "valueFrom": "${SECRET_ARN_PREFIX}s3-bucket-documents"
        }
      ],
      "mountPoints": [
        {
          "sourceVolume": "efs-storage",
          "containerPath": "/app/uploads",
          "readOnly": false
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/ragqa-data-ingestion",
          "awslogs-region": "ap-south-1",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "healthCheck": {
        "command": [
          "CMD-SHELL",
          "python -c \"import requests; requests.get('http://localhost:8006/health', timeout=5)\" || exit 1"
        ],
        "interval": 30,
        "timeout": 10,
        "retries": 3,
        "startPeriod": 20
      }
    }
  ],
  "volumes": [
    {
      "name": "efs-storage",
      "efsVolumeConfiguration": {
        "filesystemId": "${EFS_FILESYSTEM_ID}",
        "transitEncryption": "ENABLED",
        "transitEncryptionPort": 3049,
        "authorizationConfig": {
          "accessPointId": "${EFS_ACCESS_POINT_ID_INGESTION}"
        }
      }
    }
  ],
  "taskRoleArn": "${TASK_ROLE_ARN}",
  "executionRoleArn": "${EXECUTION_ROLE_ARN}",
  "tags": [
    {
      "key": "Service",
      "value": "data-ingestion"
    },
    {
      "key": "Component",
      "value": "core"
    }
  ]
}
