{
  "family": "ragqa-llm-service",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["EC2"],
  "containerDefinitions": [
    {
      "name": "llm-service",
      "image": "${AWS_ACCOUNT_ID}.dkr.ecr.${AWS_REGION}.amazonaws.com/ragqa/llm-service:${IMAGE_TAG}",
      "portMappings": [
        {
          "containerPort": 8002,
          "hostPort": 8002,
          "protocol": "tcp"
        }
      ],
      "essential": true,
      "environment": [
        {
          "name": "CUDA_VISIBLE_DEVICES",
          "value": "0"
        },
        {
          "name": "VLLM_ATTENTION_BACKEND",
          "value": "xformers"
        },
        {
          "name": "VLLM_WORKER_MULTIPROC_METHOD",
          "value": "spawn"
        },
        {
          "name": "AWS_DEFAULT_REGION",
          "value": "ap-south-1"
        }
      ],
      "secrets": [
        {
          "name": "LLM_API_KEY",
          "valueFrom": "${SECRET_ARN_PREFIX}llm-api-key"
        }
      ],
      "mountPoints": [
        {
          "sourceVolume": "model-cache",
          "containerPath": "/root/.cache/huggingface",
          "readOnly": false
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/ragqa-llm-service",
          "awslogs-region": "ap-south-1",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "healthCheck": {
        "command": [
          "CMD-SHELL",
          "curl -f -H 'Authorization: Bearer sk-ragqa-llm' http://localhost:8002/health || exit 1"
        ],
        "interval": 30,
        "timeout": 10,
        "retries": 3,
        "startPeriod": 60
      }
    }
  ],
  "volumes": [
    {
      "name": "model-cache",
      "host": {
        "sourcePath": "/mnt/efs/models"
      }
    }
  ],
  "taskRoleArn": "${TASK_ROLE_ARN}",
  "executionRoleArn": "${EXECUTION_ROLE_ARN}",
  "tags": [
    {
      "key": "Service",
      "value": "llm-service"
    },
    {
      "key": "Component",
      "value": "gpu"
    },
    {
      "key": "InstanceType",
      "value": "g5.2xlarge"
    }
  ]
}
