{
  "family": "ragqa-translation-service",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["EC2"],
  "containerDefinitions": [
    {
      "name": "translation-service",
      "image": "${AWS_ACCOUNT_ID}.dkr.ecr.${AWS_REGION}.amazonaws.com/ragqa/translation-service:${IMAGE_TAG}",
      "portMappings": [
        {
          "containerPort": 8004,
          "hostPort": 8004,
          "protocol": "tcp"
        }
      ],
      "essential": true,
      "environment": [
        {
          "name": "PYTHONUNBUFFERED",
          "value": "1"
        },
        {
          "name": "APP_ENV",
          "value": "production"
        },
        {
          "name": "APP_LOG_LEVEL",
          "value": "INFO"
        },
        {
          "name": "TRANSLATION_CACHE_TTL_SECONDS",
          "value": "86400"
        },
        {
          "name": "REDIS_PORT",
          "value": "6379"
        },
        {
          "name": "REDIS_DB_TRANSLATION",
          "value": "3"
        },
        {
          "name": "CUDA_VISIBLE_DEVICES",
          "value": "2"
        },
        {
          "name": "AWS_DEFAULT_REGION",
          "value": "ap-south-1"
        },
        {
          "name": "REDIS_HOST",
          "value": "redis.ragqa.local"
        }
      ],
      "secrets": [
        {
          "name": "TRANSLATION_MODEL",
          "valueFrom": "${SECRET_ARN_PREFIX}translation-model"
        },
        {
          "name": "REDIS_PASSWORD",
          "valueFrom": "${SECRET_ARN_PREFIX}redis-password"
        }
      ],
      "mountPoints": [
        {
          "sourceVolume": "model-cache",
          "containerPath": "/app/models",
          "readOnly": false
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/ragqa-translation-service",
          "awslogs-region": "ap-south-1",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "healthCheck": {
        "command": [
          "CMD-SHELL",
          "python -c \"import requests; requests.get('http://localhost:8004/health', timeout=5)\" || exit 1"
        ],
        "interval": 30,
        "timeout": 10,
        "retries": 3,
        "startPeriod": 45
      }
    }
  ],
  "volumes": [
    {
      "name": "model-cache",
      "host": {
        "sourcePath": "/mnt/efs/models"
      }
    }
  ],
  "taskRoleArn": "${TASK_ROLE_ARN}",
  "executionRoleArn": "${EXECUTION_ROLE_ARN}",
  "tags": [
    {
      "key": "Service",
      "value": "translation-service"
    },
    {
      "key": "Component",
      "value": "gpu"
    },
    {
      "key": "InstanceType",
      "value": "g5.2xlarge"
    }
  ]
}
